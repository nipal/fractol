								/* Load kernel source code */								#	fichier.cl				#	src	(char*)					#


								/*Initialize Data */										#							#	init_data*					#



								/* Get platform/device information */						#							#								#
unique							/* Create OpenCL Context */									#							#								#
multiple	(un part kernel)	/* Create Command Queue */									#	context					#								#

								/* Create memory buffer*/									#	context					#								#
====> init kernel
&&	(alloc_kernel)				/* Create Kernel program from the read in source */			#	context + src_ocl		#	kernel						#
&& 	(compile : divice)			/* Build Kernel Program */									#							#								#
&&	(alloc kernel: "name")		/* Create OpenCL Kernel */									#							#								#	
&&	(compile kernel)			/* Build Kernel Program */									#							#								#	
&&	(define args)				/* Set OpenCL kernel argument */							#							#								#	

====> exec boucle 
	==							/* Transfer data to memory buffer */						#							#								#
	==							/* Execute OpenCL kernel */									#							#								#	
	==							/* Transfer result from the memory buffer */				#							#								#	
	==							/* Display result */										#							#								#	
	==			   ==


free memmory					/* Finalization */											#							#								#


